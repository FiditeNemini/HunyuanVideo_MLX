MPS_USE_GUARD_MODE=1
MPS_ENABLE_MEMORY_GUARD=1
PYTORCH_MPS_SYNC_OPERATIONS=1
PYTORCH_MPS_AGGRESSIVE_MEMORY_CLEANUP=1
